<Window x:Class="WpfAppDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppDemo"
        xmlns:nlogViewer="clr-namespace:NlogViewer;assembly=NetStandard.NLogViewer"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="5" ButtonBase.Click="ButtonBase_OnClick">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0">
            <Button x:Name="btnTest">Test</Button>
        </StackPanel>
        <GroupBox Grid.Row="1" Header="NlogViewer">
            <nlogViewer:NlogViewer
                x:Name="logCtrl"
                AutoScrollToLast="True"
                ExceptionWidth="auto"
                LevelWidth="auto"
                LoggerNameWidth="0"
                MessageWidth="auto"
                TimeWidth="AUTO" />
        </GroupBox>
    </Grid>
</Window>
